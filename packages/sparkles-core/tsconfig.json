{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "target": "ES2015",
    "moduleResolution": "Node",
    "outDir": "dist",
    "isolatedModules": false,
    "jsx": "react",
    "removeComments": false,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
  "types": [
    "vite/client",
    "vitest/globals"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/*.d.ts"
  ],
  "include": [
    "vite.config.mjs",
    "vitest.config.mts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
